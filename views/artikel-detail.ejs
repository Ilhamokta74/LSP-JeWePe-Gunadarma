<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/album/">
    <link href="/docs/5.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
<body>
  <header>
    <div class="topnav" id="myTopnav">
      <a href="/home" class="disable">Sekolah Tinggi JeWePe</a>
      <a href="/home" class="navigasi">Home</a>
      <a href="/artikel" class="navigas1">Artikel</a>
      <a href="/login" class="btn btn-primary">Login</a>
      <a href="javascript:void(0);" class="icon" onclick="myFunction()">
        <i class="fa fa-bars"></i>
      </a>
    </div>
  </header>

    <main>
        <% for (let getDetail of getDetails) { %>
        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="container jumbotron">
                    <img src="/uploads/<%= getDetail.image %>" alt="Jumbotron Image" class="img-fluid" height="20%">
                </div>                  
          </section>

          <div class="container">
            <h1 class="text-center my-4"><%= getDetail.judul %></h1>
          
           <p><%= getDetail.artikel %></p>
          </div>
          <% } %>

          <!-- komentar -->
          <h2 class="text-center">komentar</h2>
          <div class="row">
            <% for (let komentar of komentars) { %>
                <div class="" >
                  <div class="card ml-5 mb-4" style="width: 18rem; height: 12rem;">
                      <h6 class="card-title ml-2"><b>ini Nama  : <%= komentar.nama %></b></h6>
                      <h6 class="card-title ml-2"> <b>ini Email  : <%= komentar.email %></b></h6>
                      <p class="card-text border-top ml-2"><%= komentar.komentar %></p>
                    </div>
                </div>
              <% } %>
          </div>

          <!-- form komentar -->
          <h2 class="text-center mb-4 text-center">Input Page</h2>
          <div class="container form-login border" style="background-color: rgb(141, 143, 144);">
            <div class="row mt-5 justify-content-center">
              <div class="col-md-6">
                <form action="/input-komentar" method="post">
                  <div class="form-group">
                      <label for="komentar-nama">Nama</label>
                      <input type="text" class="form-control" name="komentarNama" placeholder="Masukkan Nama Anda" required>
                  </div>
                  
                  <div class="form-group">
                    <label for="komentar-email">Email</label>
                    <input type="text" class="form-control" name="komentarEmail" placeholder="Masukkan Email Andai" required>
                </div>
  
                  <div class="form-group">
                      <label for="komentar">Komentar</label>
                  <div class="form-group">
                      <textarea class="form-control" rows="4" name="komentar" placeholder="Masukkan Komentar" maxlength="150" required></textarea>
                  </div>
                  <% for (let getDetail of getDetails) { %>
                    <div class="d-flex justify-content-end">
                      <button type="submit" class="btn btn-primary " name="id" value="<%= getDetail.ID_artikel %>" onclick="return alert('Berhasil Input Komentar');">Submit</button>
                    </div>
                  <% } %>
                </form>
              </div>
            </div>
          </div>
    </main>

    <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
          <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Home</a></li>
          <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Artikel</a></li>
          <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">About</a></li>
        </ul>
        <p class="text-center text-muted">Â© 2023 Ilham Oktavian</p>
    </footer>

    <script src="/script/navbar.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  </body>
</html>